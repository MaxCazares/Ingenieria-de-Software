    <!-- Favico -->
    <link rel="shortcut icon" href="../images/favico.ico" type="image/x-icon">
    <title>Registrarse/Iniciar Sesion</title>
</head>

<body class="fondo" style="font-family: Roboto;">

    <header class="text-gray-600 body-font rounded-md shadow-lg w-11/12 mx-auto">
        <div class="bg-gray-50 bg-opacity-100 container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href="/">
                <img src="../images/logoHTML.svg" class="h-10">
                <span class="ml-3 text-xl">Health Keeper</span>
            </a>
        </div>
    </header>

    <div class="flex flex-wrap flex-col sm:flex-row items-center mx-auto px-5 py-14 bg-transparent">
        <div class="flex flex-col w-5/12 bg-gray-50 bg-opacity-100 rounded-lg px-8 py-5 m-auto shadow-2xl"> 
            <div class="text-center py-2.5 mb-3">
                <div class="text-blue-500 mb-3 mx-auto text-5xl">
                    <i class="fas fa-user-plus"></i>
                </div>                
                <a class="text-2xl font-medium text-gray-900 mb-4 text-center">Crear una cuenta</a>
            </div>
            <form action="/registrar" method="post">
                <div class="mb-4">
                    <label class="text-sm text-gray-500">Nombre</label>
                    <input type="text" name="nombre"
                        class="w-full bg-white rounded border border-gray-300 focus:ring-1 focus:ring-blue-400 text-gray-700  py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="mb-4">
                    <label class="text-sm text-gray-500">Apellido Paterno</label>
                    <input type="text" name="SN1"
                        class="w-full bg-white rounded border border-gray-300 focus:ring-1 focus:ring-blue-400 text-gray-700  py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="mb-4">
                    <label class="text-sm text-gray-500">Apellido Materno</label>
                    <input type="text" name="SN2"
                        class="w-full bg-white rounded border border-gray-300 focus:ring-1 focus:ring-blue-400 text-gray-700  py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="mb-4">
                    <label class="text-sm text-gray-500">Email</label>
                    <input type="email" name="email"
                        class="w-full bg-white rounded border border-gray-300 focus:ring-1 focus:ring-blue-400 text-gray-700  py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="mb-4">
                    <label class="text-sm text-gray-500">Contraseña</label>
                    <input type="password" name="password"
                        class="w-full bg-white rounded border border-gray-300 focus:ring-1 focus:ring-blue-400 text-gray-700  py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-500 rounded text-lg text-center py-2 mt-6 w-1/2 ml-28">Crear cuenta</a>
            </form>
        </div>

        <div class="flex flex-col w-5/12 bg-gray-50 bg-opacity-100 rounded-lg px-8 py-5 m-auto shadow-2xl">
            <div class="text-center py-2.5 mb-3">
                <div class="text-blue-500 mb-3 mx-auto text-5xl">
                    <i class="fas fa-user"></i>
                </div>                
                <a class="text-2xl font-medium text-gray-900 mb-4 text-center">Iniciar Sesión</a>
            </div>
            <form action="/iniciar" method="post">
                <div class="mb-4">
                    <label class="text-sm text-gray-500">Email</label>
                    <input type="text" name="email" required
                        class="w-full bg-white rounded border border-gray-300 focus:ring-1 focus:ring-blue-400 text-gray-700  py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <div class="mb-4">
                    <label class="text-sm text-gray-500">Contraseña</label>
                    <input type="password" name="password" required
                        class="w-full bg-white rounded border border-gray-300 focus:ring-1 focus:ring-blue-400 text-gray-700  py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-500 rounded text-lg text-center py-2 mt-6 w-1/2 ml-28">Iniciar</a>
            </form> 
        </div>
    </div>

</body>

</html>
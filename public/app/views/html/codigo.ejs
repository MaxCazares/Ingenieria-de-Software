<body class="fondo" style="font-family: Roboto;">

    <header class="text-gray-600 body-font rounded-md shadow-lg w-11/12 mx-auto">
        <div class="bg-gray-50 bg-opacity-100 container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href="/">
                <img src="../images/logoHTML.svg" class="h-10">
                <span class="ml-3 text-xl">Health Keeper</span>
            </a>
        </div>
    </header>
    
    <div class="bg-transparent w-11/12 mx-auto mt-14 text-left">
        <% for(var i = 0; i < 1; ++i) {%>
            <input id= "item_txt" type="text" class="bg-transparent text-transparent border-0 mx-auto w-2" value= <%=r[i].urlPDF%>>
        <% } %>

        <div class="bg-gray-50 w-11/12 mx-auto rounded-md shadow-lg mt-4 flex flex-col py-4 px-6">
            <div class="mx-auto mt-2">
                <button id="generarCodigo" class="mr-6 text-white bg-blue-700 hover:bg-blue-500 rounded text-lg text-center py-2 px-2 mx-auto">Generar QR</button>
                <a id="descargarCodigo" class="ml-6 text-white bg-blue-700 hover:bg-blue-500 rounded text-lg text-center py-2 px-2 mx-auto">Descargar</a>
            </div>
            <div id="codigoQR" class="mx-auto mt-6">
                
            </div>  
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="../js/qrcode.js"></script>
    <script src="../js/main.js"></script>
</body>
</html>